<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00BCD4"
                android:gravity="center"
                android:paddingLeft="65dp"
                android:paddingRight="35dp"
                android:text="Vous serez le plus proche au marche de travail c'est gratuit  "
                android:textColor="#000000"
                android:textSize="20sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingLeft="20sp"
                android:text="Vous etes:"
                android:paddingTop="30dp"
                android:gravity="center"
                android:textSize="20dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioGroup">
                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="recruteur cherche des cv et pose des annonces de travail"
                    android:textSize="16sp"
                    android:checked="true"
                    />
                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="candidat cherche des annonces et pose des cv"
                    android:textSize="16sp"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingLeft="20sp"
                android:paddingTop="20dp"
                android:text="E-mail:"
                android:paddingBottom="20dp"
                android:textSize="20dp" />
            <EditText
                android:id="@+id/ET1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Votre addresse e-mail..."
                android:inputType="text"
                android:paddingLeft="70sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingLeft="20sp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="Ville:"
                android:textSize="20dp" />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sp"></Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingTop="20dp"
                android:text="Mot de passe:"
                android:textSize="20dp"
                />
            <EditText
                android:id="@+id/ET3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="saisir un mot de passe..."
                android:inputType="text"
                android:paddingLeft="20sp"
                android:paddingBottom="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="au moins 5 caractères choisissez un mot de passe qui n'est pas facile à deviner."
                android:paddingBottom="50dp"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView13"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:text="Confirmer le mot de passe:"
                android:textSize="20dp"
                android:paddingBottom="20sp" />
            <EditText
                android:id="@+id/ET4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:hint="choisissez un mot de passe..."
                android:inputType="text"
                android:paddingLeft="20sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="En validant mon inscription. j'accepte les condition generales d'utilisation le site alkhad.ma"
                android:textSize="20dp">
            </TextView>
        </LinearLayout>
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#5FD068"
            android:onClick="cree_compte"
            android:text="Cree un compte"/>
        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#5FD068"
            android:onClick="retour"
            android:text="Retour" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>